<h1>Add a new item to @Model.Name</h1>

<form action="vendors/@Model.Id/orders" method="post">
  <input id="vendorId" name="vendorId" type="hidden" value="@Model.id">

  <label for="description"></label>
  <input type="text" id="description" value="Pastries" name="description">

  <button type="submit">Add a new order to the vendor</button>
</form>